@model E_Ticaretdb.DatabaseModel.Urunler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-content-right">
                    <div class="product-breadcroumb">
                        <a href="">Home</a>
                        <a href="">Category Name</a>
                        <a href="">Sony Smart TV - 2015</a>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img id="productImage" src="/img/@Model.UrunResim.OrderBy(x => x.KategoriSiparişleri).First().ResimYolu" alt="">
                                </div>

                                <div class="product-gallery">
                                    @foreach (var item in Model.UrunResim)
                                    {
                                        <img onclick="ChangeImage('@item.ResimYolu')" width="80" src="/img/@item.ResimYolu" alt="">
                                    }

                                    @*<img src="/img/product-thumb-2.jpg" alt="">
                                        <img src="/img/product-thumb-3.jpg" alt="">*@
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="product-inner">
                                <h2 class="product-name">@Model.UrunAdı</h2>
                                <div class="product-inner-price">
                                    <ins>@Model.BirimFiyat.Value.ToString("C")</ins> @*<del>$100.00</del>*@
                                </div>

                                <form action="" class="cart">
                                    <div class="quantity">
                                        <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                    </div>
                                    <button class="add_to_cart_button" type="submit">Add to cart</button>
                                </form>

                                <div class="product-inner-category">
                                    <p>Category: <a href="">Summer</a>. Tags: <a href="">awesome</a>, <a href="">best</a>, <a href="">sale</a>, <a href="">shoes</a>. </p>
                                </div>

                                <div role="tabpanel">
                                    <ul class="product-tab" role="tablist">
                                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Açıklama</a></li>
                                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Reviews</a></li>
                                        <li role="presentation"><a href="#yorumlar" aria-controls="yorumlar" role="tab" data-toggle="tab">Yorum Listesi</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                                            <h2>Ürün Açıklaması</h2>
                                            <p>@Html.Raw(Model.Açıklama)</p>
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="profile">
                                            <h2>Reviews</h2>
                                            <form action="/Urun/Index" method="post">
                                                <div class="submit-review">
                                                    <input id="Hidden1" name="seopath" type="hidden" value="@Model.SeoPath" />
                                                    <input id="Hidden1" name="productID" type="hidden" value="@Model.UrunID" />
                                                    <p><label for="name">Ad Soyad</label> <input name="name" type="text"></p>
                                                    <p><label for="email">Email</label> <input name="email" type="email"></p>

                                                    <p><label for="review">Yorum</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                    <p><input type="submit" value="Submit"></p>
                                                </div>
                                            </form>

                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="yorumlar">
                                            <h2>Yorumlar</h2>
                                            <div class="submit-review">
                                                @foreach (var item in Model.UrunGörüntüleme.OrderByDescending(x => x.GörüntülemeTarihi).ToList())
                                                {
                                                    <p>
                                                        <span><b>@item.Ad</b></span><br />
                                                        <span><i>@item.GörüntülemeTarihi.Value.ToShortDateString()</i></span><br />
                                                    <p>@item.Görüntüleme</p>
                                                    </p>
                                                    <hr />
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>


                    <div class="related-products-wrapper">
                        <h2 class="related-products-title">Related Products</h2>
                        <div class="related-products-carousel">
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="/img/product-1.jpg" alt="">
                                    <div class="product-hover">
