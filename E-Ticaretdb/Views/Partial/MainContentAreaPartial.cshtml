@model  List<E_Ticaretdb.DatabaseModel.Urunler>
<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">En Yeni Ürünler</h2>
                    <div class="product-carousel">
                        @foreach (var item in Model)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="/img/@item.UrunResim.OrderBy(x => x.KategoriSiparişleri).FirstOrDefault().ResimYolu" alt="">
                                    <div class="product-hover">
                                        <a onclick="AddToSepet(@item.UrunID,1)" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Sepete Ekle </a>
                                        <a href="/UrunDetay/@item.SeoPath" class="view-details-link"><i class="fa fa-link"></i> Detaylar </a>
                                    </div>
                                </div>

                                <h2> <a href="/UrunDetay/@item.SeoPath"> @item.UrunAdı </a></h2>
                                <div class="product-carousel-price">
                                    <ins> @item.BirimFiyat.Value.ToString("C")</ins> @*<del>$999.00</del>*@
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



