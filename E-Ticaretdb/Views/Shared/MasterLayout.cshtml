
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ustora Demo</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link href="~/Template.Ustura/ustora/ustora/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="~/Template.Ustura/ustora/ustora/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Template.Ustura/ustora/ustora/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/Template.Ustura/ustora/ustora/style.css" rel="stylesheet" />
    <link href="~/Template.Ustura/ustora/ustora/css/responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @{Html.RenderAction("HeaderAreaPartial", "Partial"); }
    @{Html.RenderAction("SiteBrandsAreaPartial", "Partial"); }
    @{Html.RenderAction("MainMenuAreaPartial", "Partial"); }
    @RenderBody()
    @{Html.RenderAction("FooterPartial", "Partial"); }

    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/Template.Ustura/ustora/ustora/js/owl.carousel.min.js"></script>
    <script src="~/Template.Ustura/ustora/ustora/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Template.Ustura/ustora/ustora/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
  
    <script src="~/Template.Ustura/ustora/ustora/js/main.js"></script>

    <!-- Slider -->
    <script src="~/Template.Ustura/ustora/ustora/js/bxslider.min.js"></script>
    <script src="~/Template.Ustura/ustora/ustora/js/script.slider.js"></script>
    <script>
        function ChangeImage(imagename) {
            $("#productImage").attr("src", '/img/' + imagename);
        }
        function AddToBasket(ProductID, Quantity) {

            $.post("/AjaxServices/AddToBasket.ashx",
                {
                    ProductID: ProductID,
                    Quantity: Quantity
                },
                function (data, status) {
                    var jsonData = JSON.parse(data);
                    $("#basketQuantity").html(jsonData.Quantity);
                    $("#basketTotal").html(jsonData.Total);

                });

        }
    </script>
</body>
</html>
